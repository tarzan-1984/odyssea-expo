{
  "expo": {
    "name": "Odyssea",
    "slug": "odyssea",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/app-icon.png",
    "scheme": "odyssea",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.odyssea.app",
      "icon": "./assets/app-icon.png",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app uses location to share your current location and update it automatically.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "This app uses location to share your current location and update it automatically in the background.",
        "NSPhotoLibraryUsageDescription": "This app needs access to your photo library to select an avatar.",
        "NSPhotoLibraryAddUsageDescription": "This app may save selected or edited avatar to your library.",
        "UIBackgroundModes": [
          "location",
          "remote-notification"
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/app-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.odyssea.app",
      "googleServicesFile": "./google-services.json",
      "notification": {
        "icon": "./assets/images/notification-icon.png"
      },
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "POST_NOTIFICATIONS",
        "READ_MEDIA_IMAGES",
        "READ_EXTERNAL_STORAGE",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-notifications",
        {
          "sounds": [
            "./assets/sounds/livechat.wav"
          ]
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "This app uses location to share your current location and update it automatically.",
          "locationAlwaysPermission": "This app uses location to share your current location and update it automatically in the background.",
          "locationWhenInUsePermission": "This app uses location to share your current location and update it automatically."
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "googleServicesFile": "./google-services.json",
            "usesCleartextTraffic": true
          }
        }
      ],
      "expo-asset",
      "expo-web-browser"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "d95b9117-4914-4642-ae1d-a6d37a32ec26"
      }
    }
  }
}
